<Window x:Class="WPF_Projekt.View.SummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Projekt.View"
        mc:Ignorable="d"
        Title="SummaryWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#FFE3A364">
    <Grid>
        <Label Content="Összegzés" HorizontalAlignment="Left" Height="40" Margin="336,24,0,0" VerticalAlignment="Top" Width="300" FontSize="20"/>
        <DataGrid x:Name="datagrid" HorizontalAlignment="Center" Height="167" Margin="0,69,0,0" VerticalAlignment="Top" Width="466" d:ItemsSource="{Binding}"/>
        <Button x:Name="back_Btn" Content="Vissza" HorizontalAlignment="Left" Margin="661,360,0,0" VerticalAlignment="Top" Height="44" Width="87" Background="White" Click="back_Btn_Click"/>
        <Button x:Name="exit_Btn" Content="Leadás" HorizontalAlignment="Left" Margin="68,360,0,0" VerticalAlignment="Top" Height="44" Width="87" Background="White" Click="exit_Btn_Click"/>
    </Grid>
</Window>
